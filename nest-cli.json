{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/12-factor-nest/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/12-factor-nest/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/12-factor-nest",
  "projects": {
    "12-factor-nest": {
      "type": "application",
      "root": "apps/12-factor-nest",
      "entryFile": "main",
      "sourceRoot": "apps/12-factor-nest/src",
      "compilerOptions": {
        "tsConfigPath": "apps/12-factor-nest/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "health-check": {
      "type": "library",
      "root": "libs/health-check",
      "entryFile": "index",
      "sourceRoot": "libs/health-check/src",
      "compilerOptions": {
        "tsConfigPath": "libs/health-check/tsconfig.lib.json"
      }
    },
    "saga": {
      "type": "application",
      "root": "apps/saga",
      "entryFile": "main",
      "sourceRoot": "apps/saga/src",
      "compilerOptions": {
        "tsConfigPath": "apps/saga/tsconfig.app.json"
      }
    }
  }
}